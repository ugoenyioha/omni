# Omni Docker Deployment Environment Variables
# Copy this file to .env and fill in your values

# Let's Encrypt Configuration
LETSENCRYPT_EMAIL=admin@yourdomain.com
LETSENCRYPT_STAGING=false

# Cloudflare API Credentials (for DNS-01 challenge)
# Option 1: API Token (recommended - scoped permissions)
CLOUDFLARE_API_TOKEN=

# Option 2: Global API Key (legacy)
CLOUDFLARE_EMAIL=
CLOUDFLARE_API_KEY=

# Certificate renewal settings
RENEW_BEFORE_DAYS=30

# DDNS Configuration
DNS_SERVER=192.168.1.29
DNS_ZONE=home.usableapps.io
DNS_TTL=300
UPDATE_INTERVAL=60
DNS_RECORDS=omni:192.168.1.8,omni-k8s:192.168.1.8,omni-siderolink:192.168.1.8,matchbox:192.168.1.8
